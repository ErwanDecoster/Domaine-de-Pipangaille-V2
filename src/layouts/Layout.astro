---
import Footer from "@/components/Footer.astro";
import "../styles/global.css";
import Navbar from "@/components/Navbar.astro";
import "@fontsource/source-serif-4/300.css";
import "@fontsource/barlow/400.css";
import "@fontsource/barlow/700.css";
import { getLangFromUrl, useTranslations } from "../lib/i18n";
import BookingWidget from "@/components/BookingWidgetAstro.astro";
import { ClientRouter } from "astro:transitions";
import Analytics from "@vercel/analytics/astro";
import SchemaScript from "@/components/SchemaScript.astro";
import { generateLocalizedBedAndBreakfastSchema } from "@/lib/schemaHelpers";
import { SITE } from "@/constants/site";

type Props = {
  bodyClass?: string;
  title?: string;
  description?: string;
  ogImage?: string;
  reduce?: boolean;
  navHeight?: string;
  reducedNavHeight?: string;
  navBackground?: string;
  additionalSchemas?: Record<string, unknown>[];
};

const {
  bodyClass = "",
  title,
  description,
  ogImage = "/og/og-image.jpg",
  reduce = false,
  navHeight,
  reducedNavHeight,
  navBackground,
  additionalSchemas = [],
} = Astro.props as Props;
const lang = getLangFromUrl(Astro.url) as
  | "fr"
  | "en"
  | "de"
  | "es"
  | "it"
  | "nl";
const t = useTranslations(lang);

const finalTitle = title || t("seo.title");
const finalDescription = description || t("seo.description");
const siteUrl = SITE.url;

const bedAndBreakfastSchema = generateLocalizedBedAndBreakfastSchema(
  lang,
  t as unknown as Record<string, string>,
);
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <script is:inline src="/theme-init.js"></script>

    <meta name="generator" content={Astro.generator} />

    <title>{finalTitle}</title>
    <meta name="description" content={finalDescription} />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={siteUrl} />
    <meta
      name="theme-color"
      content="#fffbf8"
      media="(prefers-color-scheme: light)"
    />
    <meta
      name="theme-color"
      content="#0f0f0f"
      media="(prefers-color-scheme: dark)"
    />

    <meta property="og:title" content={t("seo.og.title")} />
    <meta property="og:description" content={t("seo.og.description")} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:image" content={new URL(ogImage, siteUrl).toString()} />
    <meta property="og:locale" content={lang} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={t("seo.twitter.title")} />
    <meta name="twitter:description" content={t("seo.twitter.description")} />
    <meta name="twitter:image" content={new URL(ogImage, siteUrl).toString()} />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <ClientRouter />
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="Pipangaille" />

    <link rel="manifest" href="/site.webmanifest" />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <SchemaScript schema={bedAndBreakfastSchema} />
    {additionalSchemas.map((schema) => <SchemaScript schema={schema} />)}

    <link
      rel="preconnect"
      href="https://domaine-de-pipangaille.amenitiz.io"
      crossorigin
    />
  </head>
  <body class={bodyClass}>
    <Navbar
      reduce={reduce}
      navHeight={navHeight}
      reducedNavHeight={reducedNavHeight}
      navBackground={navBackground}
    />
    <main class="max-w-10xl mx-auto w-full">
      <slot />
    </main>
    {reduce ? null : <Footer />}

    {reduce ? null : <BookingWidget lang={lang} />}

    <Analytics />

    <script>
      import { applyTheme, getThemePreference } from "@/lib/theme";

      document.addEventListener("astro:after-swap", () => {
        const theme = getThemePreference();
        applyTheme(theme);
      });

      document.addEventListener("astro:page-load", () => {
        const theme = getThemePreference();
        applyTheme(theme);
      });
    </script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
