---
import AccommodationTemplate from "@/components/templates/AccommodationTemplate.astro";
import { roomSlugs, type RoomSlug } from "@/constants/rooms";
import { languages } from "@/i18n/ui";
import { getCurrentLang } from "@/lib/i18n";

export const prerender = true;

export function getStaticPaths() {
  return roomSlugs.map((roomName) => ({ params: { roomName } }));
}

const lang = getCurrentLang(Astro.currentLocale) as keyof typeof languages;
const { roomName } = Astro.params as { roomName: RoomSlug };
---

<AccommodationTemplate lang={lang} roomName={roomName} />
