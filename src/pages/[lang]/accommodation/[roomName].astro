---
import AccommodationTemplate from "@/components/templates/AccommodationTemplate.astro";
import { roomSlugs, type RoomSlug } from "@/constants/rooms";
import { languages } from "@/i18n/ui";

export function getStaticPaths() {
  return Object.keys(languages).flatMap((lang) =>
    roomSlugs.map((roomName) => ({ params: { lang, roomName } }))
  );
}

const { lang, roomName } = Astro.params as {
  lang: keyof typeof languages;
  roomName: RoomSlug;
};
---

<AccommodationTemplate lang={lang} roomName={roomName} />
