---
import type { HTMLAttributes } from "astro/types";
import { cva, type VariantProps } from "class-variance-authority";
import { ArrowRight } from "@lucide/astro";

import { cn } from "@/lib/utils";

type Props = VariantProps<typeof variants> &
  HTMLAttributes<"button"> &
  HTMLAttributes<"a"> &
  HTMLAttributes<"label"> & {
    as?: "button" | "a" | "label";
    external?: boolean;
    noArrow?: boolean;
  };

const variants = cva(
  "focus-visible:border-ring group text-foreground focus-visible:ring-ring/50 aria-invalid:ring-destructive/20 dark:aria-invalid:ring-destructive/40 aria-invalid:border-destructive inline-flex shrink-0 items-center justify-center gap-3 text-center rounded-md text-md font-medium transition-all outline-none focus-visible:ring-[3px] disabled:pointer-events-none disabled:opacity-50 [&_svg]:pointer-events-none [&_svg]:shrink-0 [&_svg:not([class*='size-'])]:size-4",
  {
    variants: {
      variant: {
        default: "bg-primary text-primary-foreground hover:bg-primary/90",
        destructive:
          "bg-destructive hover:bg-destructive/90 focus-visible:ring-destructive/20 dark:focus-visible:ring-destructive/40 dark:bg-destructive/60 text-white",
        outline:
          "bg-background hover:bg-accent hover:text-accent-foreground hover:bg-input/50 border",
        secondary: "text-secondary-foreground",
        ghost:
          "hover:bg-accent hover:text-accent-foreground dark:hover:bg-accent/50",
        link: "test-foreground underline-offset-4 hover:underline gap-1!",
      },
      size: {
        default: "px-6 py-4",
        sm: "py-3 px-4 gap-1.5 rounded-md",
        lg: "h-10 rounded-md px-6 has-[>svg]:px-4",
        icon: "size-9",
        "icon-sm": "size-8",
        "icon-lg": "size-10",
      },
    },
    defaultVariants: {
      variant: "default",
      size: "default",
    },
  },
);

const {
  class: className,
  variant = "default",
  size,
  href,
  external,
  target,
  noArrow,
  ...props
} = Astro.props;

const slot = await Astro.slots.render("default");

const Comp = href ? "a" : "button";
---

{
  slot?.trim().length > 0 && (
    <Comp
      data-slot="button"
      class={cn(variants({ variant, size }), className)}
      href={href}
      target={external ? "_blank" : target}
      rel={external ? "noopener noreferrer" : undefined}
      {...props}
    >
      <Fragment set:html={slot} />
      {(variant === "secondary" || variant === "default" || external) && (
        <span
          class={
            noArrow
              ? "hidden"
              : variant === "secondary"
                ? "after:bg-primary dark:text-background relative after:absolute after:-inset-1 after:-z-10 after:rounded-full after:duration-125 group-hover:after:scale-125"
                : ""
          }
        >
          <ArrowRight class={external ? "-rotate-45" : ""} />
        </span>
      )}
    </Comp>
  )
}
